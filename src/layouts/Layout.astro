---
import '../styles/global.css';
import Navbar from '../components/Navbar.astro';
import WhatsappIcon from '../components/icons/WTSP.astro';
import Footer from '../components/Footer.astro';

const { title = 'Terapia Shalom - Masajes y Bienestar' } = Astro.props as { title?: string };
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>  
  </head>
  <body class="bg-ts-background text-ts-text font-sans relative min-h-screen flex flex-col">
    <Navbar />
     <script type="module">
      import { initAOS } from '../scripts/aos-global.js';
      initAOS();
    </script>
    <main class="flex-grow">
      <slot />
    </main>
    <a
      href="https://wa.me/56935875470"
      target="_blank"
      rel="noopener noreferrer"
      class="group fixed bottom-6 right-6 z-50 flex items-center justify-center w-14 h-14 bg-ts-primary hover:bg-ts-accent rounded-full shadow-lg transition-transform duration-300 hover:scale-110"
      aria-label="Chatear por WhatsApp"
    >
      <WhatsappIcon class="text-ts-accent group-hover:text-white" />
    </a>
    <Footer />
  </body>
</html>
